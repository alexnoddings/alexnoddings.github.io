---
import Link from "../components/Link.astro";
import EmailIcon from "../components/icons/EmailIcon.astro";
import LinkIcon from "../components/LinkIcon.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import MainLayout from "./MainLayout.astro";

interface ColumnLink {
  title: string;
  href: string;
}

interface Props {
  links?: ColumnLink[];
}

const { links } = Astro.props;
---

<MainLayout>
  <div class="flex flex-col gap-2 lg:flex-row lg:gap-8">
    <header class="sticky flex flex-col gap-2 pb-6 pt-12 lg:top-0 lg:max-h-screen lg:w-1/2 lg:py-20">
      <h1 class="font-header text-3xl text-mist">
        <a href="/" data-umami-event="home">Alex Noddings</a>
      </h1>
      <h2 class="font-header text-2xl text-mist underline decoration-smoke/75 decoration-underline-thick">
        Principal Software Engineer
      </h2>
      <p class="mt-4">
        Skilled full-stack developer architecting and leading the development of complex business systems,
        mainly with
        <a
          class="text-gradient-r from-orchid to-lavender hover:from-lavender hover:to-orchid"
          href="https://dotnet.microsoft.com/en-us/learn/dotnet/what-is-dotnet"
          data-umami-event="external-link"
          data-umami-event-site="dotnet"
        >
          .NET
        </a>
         using
        <a
          class="text-gradient-r from-lavender to-orchid hover:from-orchid hover:to-lavender"
          href="https://dotnet.microsoft.com/en-us/apps/aspnet/web-apps/blazor"
          data-umami-event="external-link"
          data-umami-event-site="blazor"
        >
          Blazor
        </a>
         and
        <a
          class="text-gradient-r from-orchid to-flamingo hover:from-flamingo hover:to-orchid"
          href="https://learn.microsoft.com/en-us/ef/core/"
          data-umami-event="external-link"
          data-umami-event-site="efcore"
        >
          EF
        </a>
         on
        <a
          class="text-gradient-r from-flamingo to-turquoise hover:from-turquoise hover:to-flamingo"
          href="https://learn.microsoft.com/en-us/aspnet/core/introduction-to-aspnet-core"
          data-umami-event="external-link"
          data-umami-event-site="aspnetcore"
        >
          ASP.NET Core</a
        >, and deployed to
        <a
          class="text-gradient-r from-turquoise to-lavender hover:from-lavender hover:to-turquoise"
          href="https://azure.microsoft.com/en-gb"
          data-umami-event="external-link"
          data-umami-event-site="azure"
        >
          Azure</a
        >.
      </p>
      <div>
        {
          links != null && links.length > 0 && (
            <ul class="flex flex-row justify-center lg:mt-12 lg:flex-col">
              {links.map(({ title, href }) => (
                <li class="w-fit">
                  <Link class="column-link" href={href}>
                    {title}
                  </Link>
                </li>
              ))}
            </ul>
          )
        }
      </div>
      <div class="mx-auto flex flex-row gap-2 lg:mx-0 lg:mt-auto lg:pt-4">
        <LinkIcon
          class="p-1"
          href="https://github.com/alexnoddings"
          data-umami-event="profile-link"
          data-umami-event-site="github"
          data-umami-event-loc="socials"
        >
          <span class="sr-only">Look at my GitHub</span>
          <GitHubIcon />
        </LinkIcon>
        <LinkIcon
          class="p-1"
          href="https://www.linkedin.com/in/alexnoddings/"
          data-umami-event="profile-link"
          data-umami-event-site="linkedin"
        >
          <span class="sr-only">Connect with me on LinkedIn</span>
          <LinkedInIcon />
        </LinkIcon>
        <LinkIcon
          class="p-1"
          href="mailto:hello@alexnoddings.com"
          data-umami-event="contact"
          data-umami-event-type="email"
        >
          <span class="sr-only">Get in touch via email</span>
          <EmailIcon />
        </LinkIcon>
      </div>
    </header>
    <main class="flex flex-col gap-2 pb-20 lg:w-1/2">
      <slot />
    </main>
  </div>
</MainLayout>

<style>
  .column-link {
    @apply block px-6 py-4 transition-transform lg:hover:ps-8;
    transition-property: padding;
  }
</style>
